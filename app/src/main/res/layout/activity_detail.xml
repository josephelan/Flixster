<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/yt_player"
        android:layout_width="match_parent"
        android:layout_height="280dp" />

    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FBF9F9"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="@string/movie_title" />

    <TextView
        android:id="@+id/tv_movie_release_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF9800"
        tools:text="@string/release_date" />

    <RatingBar
        android:id="@+id/rb_movie_rating"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#7CFFFFFF"
        android:isIndicator="true"
        android:numStars="10"
        android:progressTint="#FAC118"
        android:rating="8.5" />

    <TextView
        android:id="@+id/tv_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#FBF7F7"
        tools:text="Here is an example of a movie overview. Here is an example of a movie overview. Here is an example of a movie overview. Here is an example of a movie overview. Here is an example of a movie overview. Here is an example of a movie overview." />

    <ImageView
        android:id="@+id/ivProfile"
        android:transitionName="profile"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="380dp" />

</LinearLayout>